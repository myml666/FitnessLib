<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDC22C">

    <LinearLayout
        android:id="@+id/activity_meituansearch_ll_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/activity_meituansearch_v_searchmarginleft"
            android:layout_width="40dp"
            android:layout_height="1dp" />

    </LinearLayout>

    <View
        android:id="@+id/activity_meituansearch_v_whitemask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="#fff" />

    <com.itfitness.ftlib.widget.scrollablelayoutlib.ScrollableLayout
        android:id="@+id/activity_meituansearch_sl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_meituansearch_ll_title"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/activity_viewpagerfloat_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_gradient_white"
            android:orientation="vertical">

            <View
                android:id="@+id/activity_meituansearch_v_top"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_gradient_white"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView style="@style/HotWords" />

                    <TextView style="@style/HotWords" />

                    <TextView style="@style/HotWords" />

                    <TextView style="@style/HotWords" />

                    <TextView style="@style/HotWords" />

                    <TextView style="@style/HotWords" />

                    <TextView style="@style/HotWords" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/activity_meituansearch_mi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="#F5F5F5" />

        <android.support.v4.view.ViewPager
            android:id="@+id/activity_meituansearch_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5">

        </android.support.v4.view.ViewPager>
    </com.itfitness.ftlib.widget.scrollablelayoutlib.ScrollableLayout>

    <FrameLayout
        android:id="@+id/activity_meituansearch_fl_searchcontainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_white_top_round">

        <View
            android:id="@+id/activity_meituansearch_v_searchbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="#fff" />

        <LinearLayout
            android:id="@+id/activity_meituansearch_ll_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_search"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="搜索" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_meituansearch_img_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_back_black" />

    </LinearLayout>
</RelativeLayout>