<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itfitness.fitnesslib">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_fitlib_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_fitlib_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--商品详情图片列表-->
        <activity android:name=".activity.GoodsDetailsImageActivity" android:launchMode="singleTop" android:screenOrientation="portrait"/>
        <!--ViewPager Indicator悬浮置顶-->
        <activity android:name=".activity.ViewPagerFloatActivity" android:screenOrientation="portrait" android:launchMode="singleTop"/>
        <!--圆角图片-->
        <activity android:name=".activity.RoundImageActivity" android:screenOrientation="portrait" android:launchMode="singleTop"/>
        <!--圆角图片-->
        <activity android:name=".activity.RefreshAndLoadMore" android:screenOrientation="portrait" android:launchMode="singleTop"/>
        <!--外卖行业入口控件-->
        <activity android:name=".activity.IndustryActivity" android:screenOrientation="portrait" android:launchMode="singleTop"/>
        <!--仿美团搜索动画-->
        <activity android:name=".activity.MeiTuanSearchAnimActivity" android:screenOrientation="portrait" android:launchMode="singleTop"/>
    </application>

</manifest>