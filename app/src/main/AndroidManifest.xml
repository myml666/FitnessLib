<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itfitness.fitnesslib">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_fitlib_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_fitlib_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--商品详情图片列表-->
        <activity android:name=".activity.GoodsDetailsImageActivity" android:launchMode="singleTop" android:screenOrientation="portrait"/>
    </application>

</manifest>